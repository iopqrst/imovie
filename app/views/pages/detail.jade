extends ../layout

block content
	.container
		.row
			.col-md-7
				embed(src="#{movie.flash}",allowFullScreen="true",quality="high",width="720",height="600",align="middle",type="application/x-shockwave-flash")
				div.space30
				.panel.panel-default
					.panel-heading
						h3 评论区
					.panel-body
						ul.media-list
							
							li.media
								.pull-left
									img.media-object(src="", style="width:64px; height:64px;")
								.media-body
									h4.media-heading 这里是评论的作者
									p 这里是评论的内容
								hr
							if user
								form(method="POST",action="/user/comment")
									.form-group
										input(type="hidden", name="comment[movie]",value="#{movie._id}")
										input(type="hidden", name="comment[from]",value="#{user._id}")
										textarea.form-control(name="comment[content]", row="3")
										button.btn.btn-primary(type="submit") 提交
							else 
								a(href="/signin") 登录后评论
				div.space50
			.col-md-5
				dl.dl-horizontal
					dt 电影名字
					dd= movie.title
					dt 导演
					dd= movie.doctor
					dt 国家
					dd= movie.country
					dt 语言
					dd= movie.language
					dt 上映年份
					dd= movie.year
					dt 简介
					dd= movie.summary
